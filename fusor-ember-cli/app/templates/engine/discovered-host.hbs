<strong>{{cntSelectedHosts}}</strong> of <strong>{{availableHosts.length}}</strong>
available hosts selected {{!engineIdSelected}}
<br />
<br />
<table class="table table-bordered table-striped small">
  <thead>
    <tr>
      <th> </th>
      <th> MAC </th>
      <th> CPU's </th>
      <th> Memory </th>
    </tr>
  </thead>

  <tbody>
  {{#each host in availableHosts itemController="host"}}
    <tr>
      <td>
        {{radio-button name='engineIdSelected' checked=engineIdSelected value=host.id}}
      </td>
      <td> {{host.mac}} </td>
      <td> {{host.cpus}} </td>
      <td> {{host.memory}} </td>
    </tr>
  {{/each}}
  </tbody>
</table>

