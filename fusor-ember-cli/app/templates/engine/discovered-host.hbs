<div class='row'>
  <div class='col-lg-9'>

    {{#if isLoadingHosts}}
      <div class="spinner spinner-md spinner-inline"></div>
      <span class='spinner-text'>
        Loading ....
      </span>

    {{else}}

      <div class="rhev-searchbar clearfix">
        <form class="form-inline">
          <div class='col-md-5'>
            <div class="form-group">
              <div class='rhev-search-box'>
                  {{input type='text' class='form-control rhev-search-input'
                               placeholder=' Search ...'
                               value=value disabled=isStarted}}
              </div>
            </div>
          </div>

          <div class='col-md-7 text-right'>

            {{numSelected}} selected

            <button class='btn btn-default btn-sm' {{action 'refreshDiscoveredHosts'}}
                    disabled={{isStarted}}>
                Refresh Data
            </button>
          </div>

        </form>
      </div>

      <table class="table table-bordered small fusor-table">
        <thead>
          <tr>
            <th class='rhev-checkbox'> {{!input type="checkbox" checked=allChecked}}</th>
            <th class='rhev-hostname'> Host Name </th>
            <th class='rhev-mac-address'> MAC Address </th>
            <th class='rhev-host-type text-center'> Host Type </th>
            <th class='rhev-cpu text-center'> CPU </th>
            <th class='rhev-memory text-center'> Memory </th>
            <th class='rhev-disks text-center'> # Disks </th>
            <th class='rhev-diskspace text-center'> Disk Space </th>
            <th class='rhev-network'> Network </th>
          </tr>
        </thead>
        <tbody>
          {{#each filteredHosts as |host|}}
             {{tr-engine host=host
                         selectedRhevEngineHost=selectedRhevEngineHost
                         disabled=isStarted
                         action="onEngineChanged"
                         setIfHostnameInvalid='setIfHostnameInvalid'}}
          {{/each}}
        </tbody>
      </table>

      <div class='displaying-entries col-md-5'>
        <div class="pull-left pull-bottom darkgray pagination">
          {{displayingEntries}}
        </div>
      </div>

      {{#if showPagination}}
        <div class="col-md-7">
          <ul class="pagination pull-right">
            <li class="prev previous_page {{if disablePrevPage 'disabled'}}">
              {{#link-to 'engine.discovered-host' (query-params page=prevPage) disabled=disablePrevPage}}«{{/link-to}}
            </li>
            {{#each pageRange as |num|}}
              <li>
                {{#link-to 'engine.discovered-host' (query-params page=num)}}{{num}}{{/link-to}}
              </li>
            {{/each}}
            <li class="next next_page {{if disableNextPage 'disabled'}}">
              {{#link-to 'engine.discovered-host' (query-params page=nextPage) disabled=disableNextPage}}»{{/link-to}}
            </li>
          </ul>
        </div>
      {{/if}}
prevPage - {{prevPage}}
<Br />
nextPage - {{nextPage}}
    {{/if}}

  </div>
</div>

{{cancel-back-next backRouteName='rhev-setup'
                   disableBack=false
                   nextRouteName=engineNextRouteName
                   disableNext=disableNextOnEngine
                   disableCancel=isStarted
                   deploymentName=deploymentName}}
