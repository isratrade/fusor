{{!hypervisorModelIds}}
{{!selectedHypervisors}}
{{!selectedHypervisors.length}}
<br />
<table class="table table-bordered table-striped small">
<thead>
    <tr>
      <th> </th>
      <th> Name </th>
      <th> MAC </th>
      <th> CPU's </th>
      <th> Memory </th>
    </tr>
  </thead>

  <tbody>
  {{#each host in availableHosts itemController='discovered-host'}}
    <tr>
      <td>
        {{radio-button value=host.model groupValue=selectedRhevEngineHost changed="engineHostChanged"}} {{!host.id}}
      </td>
      <td>
           {{#if host.isSelectedAsEngine}}
              {{input type="text" value=host.name class='font-control'}}
           {{/if}}
      </td>
      <td> {{host.mac}} </td>
      <td> {{host.cpus}} </td>
      <td> {{host.memory}}</td>
    </tr>
  {{/each}}
  </tbody>
</table>

<div class='pull-right'>
  <br />
  {{#link-to 'deployments' class='btn btn-default'}}Cancel{{/link-to}}
  {{#link-to 'hypervisor.discovered-host' class='btn btn-primary'}}Next{{/link-to}}
</div>
